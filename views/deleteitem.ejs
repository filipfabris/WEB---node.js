<!DOCTYPE html>
<html>

    <%- include(`partials/head`); %>

    <body class="content">

        <%- include(`partials/header`); %>

        <main class="main">
            <div class="centered-container">

                <h1 class="decorated-title font-secondary main-color">Delete <span class="main-color-emphasized">
                        Existing</span> Item</h1>
                <div class="separator"></div>
            </div>

            <section class="section secondary-color-bg">

                <div class="container">

                    <fieldset class="form-fieldset">

                        <% for (const item of items) { %>

                        <form action="/admin/deleteitem" method="post" class="deleteFieldTextButton"
                            onsubmit="return confirm('Are you sure you want to delete this item?')">

                            <span><%= item.name %></span>

                            <input type="hidden" name="itemId" value="<%= item.id %>">

                            <input type="submit" value="Delete" class="btn">

                        </form>

                        <% } %>

                    </fieldset>

                </div>

            </section>


        </main>

        <%- include(`partials/footer`); %>

    </body>

</html>